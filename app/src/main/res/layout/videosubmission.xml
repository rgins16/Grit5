<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181818">

    <VideoView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/videoSubmissionView"
        android:layout_gravity="top|center_horizontal"
        android:layout_weight=".85"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextVideo"
        android:gravity="center"
        android:text="Say something about your video!"
        android:layout_below="@+id/textViewVideo"
        android:layout_weight=".05"
        android:textColor="#ffc113"
        android:textStyle="bold"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/videoSubmitButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:drawableLeft="@drawable/cross"
        android:paddingLeft="14dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/editTextVideo"
        android:layout_weight=".05"
        android:background="@drawable/mediabutton"
        />
</LinearLayout>