<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.robbieginsburg.grit5.AddVideo">

    <Button
        android:id="@+id/captureVideoButton"
        android:drawableLeft="@drawable/capturevideo"
        android:paddingLeft="10dp"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/addmediabutton"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/uploadVideoButton"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/uploadVideoButton"
        android:layout_below="@+id/captureVideoButton"
        android:drawableLeft="@drawable/uploadvideo"
        android:paddingLeft="10dp"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/addmediabutton"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"/>

</RelativeLayout>
